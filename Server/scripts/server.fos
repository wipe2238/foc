bool buffer_test()
{
    Buffer buffer;

    buffer.Debug = true;

    uint8 u8 = 0;
    buffer << uint8( 238 );
    buffer >> u8;
    Log( "u8 = " + u8 );

    int i32 = 0;
    buffer << 1207;
    buffer >> i32;

    Log( "i32 = " + i32 );

    if( u8 != 238 || i32 != 1207 )
        return false;

